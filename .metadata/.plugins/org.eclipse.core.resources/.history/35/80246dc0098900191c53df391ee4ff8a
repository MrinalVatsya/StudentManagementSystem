package com.mind.poc;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;

/**
 * @author mrinalvatsya
 *
 */
public class Add1ToNumber {
	
	 public ArrayList<Integer> plusOne(ArrayList<Integer> a) {

		 	int n = a.size();
		 	int i = 0;
		 	while(i < a.size())//remove leading zeroes..
		 	{
		 		if(a.get(i)==0)
		 			a.remove(i);
		 		i++;
		 	}
		 	
		 	int carry = 1;
		 	int sum = 0;
		 	for(i = a.size()-1; i >= 0; i--)
		 	{
 		 		sum = a.get(i) + carry;
 		 		a.set(i, sum % 10);
 		 		carry = sum / 10;
 		 		if(carry==0)
 		 		{
 		 			break;
 		 		}
		 	}
		 	
		 	return a;
		 	
	    }
	 
	 public static void main(String[] args) {
		Add1ToNumber obj = new Add1ToNumber();
		ArrayList<Integer> ans = new ArrayList<>(Arrays.asList(1, 1, 1, 3, 2, 1, 1, 2, 5, 9, 6, 5));
		ArrayList<Integer> list = obj.plusOne(ans);
		
	}

}
