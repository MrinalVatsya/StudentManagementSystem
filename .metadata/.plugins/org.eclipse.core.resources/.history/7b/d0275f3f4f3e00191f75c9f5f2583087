package com.mind.poc;

import java.util.LinkedList;
import java.util.List;

/**
 * @author mrinalvatsya
 *
 */
public class Bfs {
	
	private int V;
	private LinkedList<Integer> adj[];
	
	public Bfs(int v) {
		super();
		this.V = v;
		adj = new LinkedList[V];
		for(int i = 0 ; i < V; i++)
		{
			adj[i] = new LinkedList<>();
		}
		
	}
	
	void addEdge(int u , int v)
	{
		adj[u].add(v);
	}
	
	void bfs(int s)
	{
		boolean visited[] = new boolean[V];
		
		for(int i = 0 ; i < V; i++)
			visited[i] = false;
		
		LinkedList<Integer>queue = new List<>();
		queue.add(s);//adding source
		visited[s] = true;
		
		while(!queue.isEmpty())
		{
			queue
		}
	}

}
