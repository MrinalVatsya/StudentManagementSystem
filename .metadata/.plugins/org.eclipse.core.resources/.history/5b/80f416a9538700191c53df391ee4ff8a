 * 
 */
package com.mind.poc;

import java.util.ArrayList;

/**
 * @author mrinalvatsya
 *
 */
public class BlackShapes {
	
	public int black(ArrayList<String> a) {
		
		int m = a.size();
		int n = a.get(0).length();
		int i , j ;
		int count = 0;
		for(i = 0; i < m; i++)
		{
			for(j = 0; j < n; j++)
			{
				if(a.get(i).charAt(j)=='X')
				{
					dfs(i,j,a);
					count++;
				}
			}
		}
		
		return count;
    }

	private void dfs(int x, int y, ArrayList<String> a) {
	
		a.get(x).charAt(y) = '0';
		
		int r[] = {0,1,-1,0};
		int c[] = {1,0,0,-1};
		
		for(int k = 0; k < 4; k++)
		{
			int xi = x + r[k];
			int yi = y + c[k];
			
			if(a.get(xi).charAt(yi)=='X')
			{
				dfs(xi, yi, a);
			}
			
		}
		
	}

}
