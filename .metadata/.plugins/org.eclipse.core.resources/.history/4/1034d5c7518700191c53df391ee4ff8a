public class BlackShapes {
	
	public int black(ArrayList<String> a) {
		
		int m = a.size();
		int n = a.get(0).length();
		int i , j ;
		int count = 0;
		for(i = 0; i < m; i++)
		{
			for(j = 0; j < n; j++)
			{
				if(a.get(i).charAt(j)=='X')
				{
					dfs(i,j,a);
				}
			}
		}
    }

